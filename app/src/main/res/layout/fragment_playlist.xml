<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp">

    <RelativeLayout
        android:id="@+id/relativePlaylists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="再生リスト"
            android:textColor="#000000"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_margin="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            />

        <Button
            android:id="@+id/btnSortPlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="並べ替え"
            android:layout_margin="2dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            />

        <View
            android:id="@+id/devider1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#BFBFBF"
            android:layout_below="@+id/btnSortPlaylist"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerPlaylists"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#BFBFBF"
            android:dividerHeight="0.5dp"
            android:paddingBottom="80dp"
            android:clipToPadding="false"
            android:layout_below="@+id/devider1"
            />

        <RelativeLayout
            android:id="@+id/relativePlaylistsBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >

            <TextView
                android:id="@+id/textAddPlaylist"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="＋"
                android:textSize="40dp"
                android:background="@drawable/circle"
                android:textColor="#FFFFFF"
                android:clickable="true"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_alignParentRight="true"
                android:visibility="visible"
                />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeSongs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/relativeLeft"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            >

            <TextView
                android:id="@+id/textLeft"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="←"
                android:textSize="15dp"
                android:background="@drawable/circle2"
                android:textColor="#007AFF"
                android:clickable="true"
                android:gravity="center"
                android:layout_margin="12dp"
                />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerTab"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="0.5dp"
            android:divider="#BFBFBF"
            android:dividerHeight="0.5dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/relativeLeft"
            android:layout_toLeftOf="@+id/relativeAddPlaylist"
            />

        <RelativeLayout
            android:id="@+id/relativeAddPlaylist"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            >

            <TextView
                android:id="@+id/textAddPlaylist_small"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="＋"
                android:textSize="15dp"
                android:background="@drawable/circle2"
                android:textColor="#007AFF"
                android:clickable="true"
                android:gravity="center"
                android:layout_margin="12dp"
                />

        </RelativeLayout>

        <View
            android:id="@+id/devider2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#BFBFBF"
            android:layout_below="@+id/recyclerTab"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerSongs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#BFBFBF"
            android:dividerHeight="0.5dp"
            android:paddingBottom="80dp"
            android:clipToPadding="false"
            android:layout_below="@+id/devider2"
            />

        <RelativeLayout
            android:id="@+id/relativeBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >

            <TextView
                android:id="@+id/textAddSong"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="＋"
                android:textSize="40dp"
                android:background="@drawable/circle"
                android:textColor="#FFFFFF"
                android:clickable="true"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_alignParentRight="true"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/textFinishSort"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="並べ替えを終了する"
                android:textColor="#FFFFFF"
                android:textSize="22dp"
                android:background="#007AFF"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
